<div class="nested-fields">
    <%= f.hidden_field :_destroy %>
    <div>
        <%= f.label :tagline %>
        <%= f.text_field :tagline %>
    </div>
    <div>
        <%= form.label :upload_image, :class => "control-label" %>
        <%= form.file_field :image, :class => "input-xlarge" %>
    </div>
    <div>
        <%= link_to "Remove", '#', class: "remove_fields" %>
    </div>
</div>