<div class="row-fluid">
  <div class="span4 well">
    <%= form_for @album, :html => {:class => "form-horizontal"} do |form| %>
      <fieldset>
        <div class="control-group">
          <%= form.label :album_name, :class => "control-label" %>
          <div class="controls">
            <%= form.text_field :name, :class => "input-xlarge" %>
          </div>
        </div>
        <br>
        <div class="form-actions">
          <%= form.submit :class => "btn btn-primary" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>