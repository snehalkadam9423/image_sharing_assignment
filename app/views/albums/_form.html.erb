<% @album.errors.each do |attr, msg|  %>
	<%if attr.to_s == "base"%>
		<h1 style="color:red"><%= msg %></h1>
	<% end %>
<% end %>
<div class="row-fluid">
	<div class="span4 well">
		<%= nested_form_for @album, :html => {:class => "form-horizontal"} do |form| %>
			<fieldset>
				<h4>Album Details</h4>
				<div class="control-group">
					<%= form.label :album_name, :class => "control-label" %>
					<div class="controls">
						<%= form.text_field :name, :class => "input-xlarge" %>
					</div>
				</div>
				<h4>Photos Details</h4>
				<%= form.fields_for :photos do |photo_form| %>
					<div class="control-group">
						<%= photo_form.label :tagline %>
						<div class="controls">
							<%= photo_form.text_field :tagline %>
						</div>
					</div>
					<div class="control-group">
						<%= photo_form.label :image_upload %>
						<div class="controls">
							<%= photo_form.file_field :image %>
						</div>
					</div>
					<%= photo_form.link_to_remove "Remove this photo", class: "btn btn-danger"%>
				<% end %>
				<p><%= form.link_to_add "Add a photo", :photos, class: "btn btn-success" %></p>
				<div class="form-actions">
					<%= form.submit :class => "btn btn-primary" %>
				</div>
			</fieldset>
		<% end %>
	</div>
</div>
